<Window x:Class="libary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:libary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="Справочник">
                    <MenuItem Header="Авторы" Command="{Binding OpenAutors}"/>
                    <MenuItem Header="Книги" Command="{Binding OpenBooks}"/>
                    <MenuItem Header="Издательства" Command="{Binding OpenPublishers}"/>
                    <MenuItem Header="Редактирование книг" Command="{Binding OpenBooksEdit}"/>
                </MenuItem>
                <MenuItem Header="Список">
                    <MenuItem Header="Список Жанров" Command="{Binding OpenGenres}"/>
                </MenuItem>
            </Menu>
            <Frame Grid.Row="1" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
